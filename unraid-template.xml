<?xml version="1.0"?>
<Container version="2">
  <Name>rvc2mqtt</Name>
  <Repository>ghcr.io/rv10guy/rvc2mqtt:latest</Repository>
  <Registry>https://ghcr.io/rv10guy/rvc2mqtt</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/rv10guy/rvc2mqtt/issues</Support>
  <Project>https://github.com/rv10guy/rvc2mqtt</Project>
  <Overview>RV-C to MQTT bridge with Home Assistant Discovery. Provides bidirectional communication between RV-C CAN bus and Home Assistant via MQTT, enabling monitoring and control of RV systems (lights, HVAC, tanks, batteries, etc.).</Overview>
  <Category>HomeAutomation:</Category>
  <WebUI/>
  <TemplateURL>https://raw.githubusercontent.com/rv10guy/rvc2mqtt/master/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/rv10guy/rvc2mqtt/master/docs/icon.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>
    RV-C CAN bus interface (ESP32 with SLCAN)&#xD;
    MQTT broker (e.g., Mosquitto on Home Assistant)&#xD;
    Home Assistant with MQTT integration
  </Requires>
  <Config Name="Configuration File" Target="/app/rvc2mqtt.ini" Default="/mnt/user/appdata/rvc2mqtt/rvc2mqtt.ini" Mode="ro" Description="Main configuration file (rvc2mqtt.ini)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/rvc2mqtt/rvc2mqtt.ini</Config>
  <Config Name="Mappings Directory" Target="/app/mappings" Default="/mnt/user/appdata/rvc2mqtt/mappings" Mode="ro" Description="Entity mapping files directory" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/rvc2mqtt/mappings</Config>
  <Config Name="RVC Spec File" Target="/app/rvc-spec.yml" Default="/mnt/user/appdata/rvc2mqtt/rvc-spec.yml" Mode="ro" Description="RV-C specification YAML file" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/rvc2mqtt/rvc-spec.yml</Config>
  <Config Name="Logs Directory" Target="/app/logs" Default="/mnt/user/appdata/rvc2mqtt/logs" Mode="rw" Description="Application logs (persistent)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/rvc2mqtt/logs</Config>
  <Config Name="Audit Directory" Target="/app/audit" Default="/mnt/user/appdata/rvc2mqtt/audit" Mode="rw" Description="Command audit logs (persistent)" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/rvc2mqtt/audit</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone (e.g., America/New_York, Europe/London)" Type="Variable" Display="always" Required="false" Mask="false">America/New_York</Config>
  <Config Name="MQTT Broker" Target="MQTT_BROKER" Default="" Mode="" Description="MQTT broker IP (optional override, uses config file if empty)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="MQTT User" Target="MQTT_USER" Default="" Mode="" Description="MQTT username (optional override)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="MQTT Password" Target="MQTT_PASS" Default="" Mode="" Description="MQTT password (optional override)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="CAN Port" Target="CAN_PORT" Default="" Mode="" Description="CAN interface (optional override, e.g., 192.168.1.100:3333)" Type="Variable" Display="advanced" Required="false" Mask="false"/>
  <Config Name="Debug Level" Target="DEBUG_LEVEL" Default="0" Mode="" Description="Debug level (0=none, 1=errors, 2=warnings, 3=info)" Type="Variable" Display="advanced" Required="false" Mask="false">0</Config>
</Container>
